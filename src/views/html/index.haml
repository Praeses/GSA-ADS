%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height, target-densitydpi=device-dpi", :name => "viewport"}/
    %link{:href => "http://cdnjs.cloudflare.com/ajax/libs/dc/1.7.0/dc.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "/css/app.css", :rel => "stylesheet", :type => "text/css"}/


  %body


    .page-container

      .page-navigation
        #menu-link.page-navigation-hamburger{ title: "GSA ADS" }
          %i.fa.fa-bars
        .page-navigation-menu
          .page-navigation-info
            %a.logo{:href => "/"}
              GSA ADS
          %ul.navigation
            %li
              %a.toggleAgeJs{:href => "#", title:"Toggle Age Chart"}
                %i.fa.fa-birthday-cake
                Toggle Age Chart
            %li
              %a.toggleDrugJs{:href => "#", title:"Toggle Drug Chart"}
                %i.fa.fa-tags
                Toggle Drug Chart
            %li
              %a.toggleLocationJs{:href => "#", title:"Toggle Location Chart"}
                %i.fa.fa-map-marker
                Toggle Location Chart


      .page-content
        .card
          %h1="Breakdowns"
          %br
          %br
          .chart.chart-small
            %h3="Drug Events By Age"
            #ageCountChart
          .chart.chart-small
            %h3="Drug Events By Drug Name"
            #drugCountChart
          .chart.chart-small
            %h3="Drug Events By Location"
            #locationCountChart


        .card
          %h1="Number of Drug Events By Day"
          %br
          %br
          .mx-container
            .mx-button
              %input#btnDay{:name => "drugResolution", :type => "radio"}
                %label{:for => "btnDay", :unselectable => ""} Day
            .mx-button
              %input#btnMonth{:checked => "", :name => "drugResolution", :type => "radio"}
                %label{:for => "btnMonth", :unselectable => ""} Month
            .mx-button
              %input#btnYear{:name => "drugResolution", :type => "radio"}
                %label{:for => "btnYear", :unselectable => ""} Year
          .chart
            #compositeChart


    %script{ type: "text/javascript", src: "http://cdnjs.cloudflare.com/ajax/libs/d3/3.5.5/d3.js"}
    %script{ type: "text/javascript", src: "http://cdnjs.cloudflare.com/ajax/libs/crossfilter/1.3.11/crossfilter.js"}
    %script{ type: "text/javascript", src: "http://cdnjs.cloudflare.com/ajax/libs/dc/1.7.3/dc.js"}


    / NOTE: no minification and aggregation for your viewing pleasure
    %script{ type: "text/javascript", src: "/javascript/chart_lib.js"}
    %script{ type: "text/javascript", src: "/javascript/drug_chart.js"}
    %script{ type: "text/javascript", src: "/javascript/drug_count_chart.js"}
    %script{ type: "text/javascript", src: "/javascript/age_count_chart.js"}
    %script{ type: "text/javascript", src: "/javascript/location_count_chart.js"}
    %script{ type: "text/javascript", src: "/javascript/app.js"}



